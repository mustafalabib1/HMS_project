<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PLProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    <link rel="stylesheet" href="~/PLProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PLProject</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <!-- Home and Privacy -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @if (User.IsInRole(Roles.Admin))
                        {
                            <!-- Dropdown for Staff -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="staffDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Staff
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="staffDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Doctor" asp-action="Index">Doctor</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Nurse" asp-action="Index">Nurses</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Pharmacist" asp-action="Index">Pharmacist</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Receptionist" asp-action="Index">Receptionist</a></li>
                                </ul>
                            </li>

                            <!-- Dropdown for Medical -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="medicalDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Medical
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="medicalDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="ActiveSubstance" asp-action="Index">Active Substance</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Medication" asp-action="Index">Medication</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Clinic" asp-action="Index">Clinic</a></li>
                                </ul>
                            </li>
                        }

                        <!-- Appointment -->
                        @* There Should be a view for Patient, Doctor and Receptionist*@
                        @if (User.IsInRole(Roles.Doctor))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AppointmentDoctor" asp-action="Index">Show My Appointments</a>
                            </li>
                        }
                        @if (User.IsInRole(Roles.Patient))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AppointmentPatient" asp-action="Index">Book An Appointment</a>
                            </li>
                        }

                        @if (User.IsInRole(Roles.Receptionist) || User.IsInRole(Roles.Admin))
                        {
                            <!-- Dropdown for Billing -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="billingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Billing
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="billingDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Invoice" asp-action="Index">Invoices</a></li>
                                </ul>
                            </li>
                        }

                    </ul>

                    <!-- Login Area -->
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PLProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("ClientSideValidation", required: false)
</body>
</html>
